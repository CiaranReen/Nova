<div class="table-widget">
    <table class="table table-striped table-bordered table-advance table-hover">
        <thead>
        <tr>
            <th style="width: 2%"><input class="select-all" value="all" type="checkbox"></th>
            <th style="width: 5%">ID</th>
            <th>Name</th>
        </tr>
        </thead>
